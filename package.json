{
  "name": "nord-homework",
  "version": "1.0.0",
  "repository": "https://github.com/Perchusha/nord-homework",
  "author": "Anton Perch",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "webpack serve --open --config ./webpack/webpack.dev.js",
    "build": "yarn lint && rimraf build && webpack --config ./webpack/webpack.prod.js",
    "format": "yarn prettier ./src --write",
    "lint": "eslint --fix --ext .ts,.tsx ./src",
    "test": "jest",
    "deploy": "gh-pages -d build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-router": "^6.15.0",
    "react-router-dom": "^6.15.0",
    "redux-saga": "^1.2.3",
    "sass": "^1.66.1",
    "styled-components": "^6.0.7",
    "typed-redux-saga": "^1.5.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.14",
    "@babel/preset-react": "^7.22.5",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-bootstrap": "^0.32.32",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^9.1.3",
    "cache-loader": "^4.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "file-loader": "^6.2.0",
    "gh-pages": "^6.0.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "sass-loader": "^13.3.2",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "thread-loader": "^4.0.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  }
}
